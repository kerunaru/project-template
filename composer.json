{
    "name": "kerunaru/project-template",
    "description": "Plantilla base para nuevos proyectos",
    "license": "GNU GPLv3",
    "type": "project",
    "keywords": ["slim", "mvc", "bulma", "deployer"],
    "require": {
        "slim/slim": "4.*",
        "slim/psr7": "1.*",
        "twig/twig": "3.*",
        "symfony/dotenv": "5.*",
        "guzzlehttp/guzzle": "^7.0",
        "doctrine/dbal": "^3.1",
        "php-di/php-di": "^6.3"
    },
    "require-dev": {
        "zeuxisoo/slim-whoops": "0.*",
        "deployer/deployer": "4.*",
        "symfony/var-dumper": "4.*",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "App\\Test\\": "test/"
        }
    }
}
